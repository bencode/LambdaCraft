---
import '../styles/global.css'

type Props = {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900 font-mono">
    <main class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
      <slot />
    </main>
  </body>
</html>
